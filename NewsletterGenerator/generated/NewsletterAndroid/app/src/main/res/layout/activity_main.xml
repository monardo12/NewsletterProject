<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.uniandes.newslettermockup.MainActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:columnCount="1"
            android:rowCount="12">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_header02_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header02_1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:background="#E5E5E5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="SEMANA 15 - 20 DE FEBRERO 2016"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_disenoboletin19febrerob02_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:src="@drawable/disenoboletin19febrerob02_2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_disenoboletin19febrerob03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/disenoboletin19febrerob03" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="4"
                android:background="#464749"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ELEMENTOS LEGALES PARA EL EMPRENDIMIENTO DIGITAL "
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aspectos jurídicos que, como mínimo, todo emprendedor debe conocer."
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="5"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#464749"
                    android:columnCount="2"
                    android:rowCount="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="0.4"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_disenoboletin19febrero05_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/disenoboletin19febrero05_1" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_columnWeight="0.6"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button_presencial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/selector_on_click_view_orange"
                            android:clickable="true"
                            android:onClick="onClick"
                            android:text="Presencial" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25 de Febrero 2016 - 2:00 pm"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff" />

                        <Button
                            android:id="@+id/button_virtual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColorHint="#DE8616"
                            android:background="@drawable/selector_on_click_view_orange"
                            android:onClick="onClick"
                            android:text="Virtual" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 de Marzo 2016 - 2:00 pm"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#ffffff" />
                    </LinearLayout>

                </GridLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="6"
                android:background="#464749"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_disenoboletin19febrero14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:src="@drawable/disenoboletin19febrero14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="7"
                android:orientation="vertical">


                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E5E5E5"
                    android:columnCount="2"
                    android:rowCount="1">

                    <LinearLayout
                        android:id="@+id/layout_video1"
                        android:layout_width="0dp"
                        android:layout_columnWeight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:layout_row="0"
                        android:onClick="onClick"
                        android:background="@drawable/selector_on_click_video_orange"
                        android:clickable="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_disenoboletin19febrerob20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/disenoboletin19febrerob20" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="En el 2016 habrá 1600 millones de cosas conectadas "
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_video2"
                        android:layout_width="0dp"
                        android:layout_columnWeight="0.5"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_row="0"
                        android:onClick="onClick"
                        android:background="@drawable/selector_on_click_video_orange"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_disenoboletin19febrerob17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/disenoboletin19febrerob17" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tendencias claves para un año cargado de tecnología"
                            android:textAlignment="center"
                            android:textAppearance="?android:attr/textAppearanceSmall" />
                    </LinearLayout>
                </GridLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="8"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView_disenoboletin19febreropartners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/disenoboletin19febreropartners" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_column="0"
                android:layout_row="9"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="#ff0000"
                android:orientation="vertical"
                android:gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#C0C0C0">

                </LinearLayout>
            </LinearLayout>


        </GridLayout>
    </ScrollView>
</RelativeLayout>
